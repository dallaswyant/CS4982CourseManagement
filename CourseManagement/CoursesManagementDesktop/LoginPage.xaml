<Page x:Class="CoursesManagementDesktop.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoursesManagementDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid  Background="#E5EAEE" Margin="0,0,-6.4,5.8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">


        <Grid Background="Black" HorizontalAlignment="Stretch" Height="159" VerticalAlignment="Top" RenderTransformOrigin="0.509,0.037" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,0,0.4,0">

            <TextBlock Foreground="#E5EAEE"  Text="CourseHub" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="50" Height="82" FontFamily="Rockwell Extra Bold" HorizontalAlignment="Center" Width="369" Margin="199,55,238,22" />
        </Grid>
        <Button Content="Login" Margin="455,341,482,342" Click="Button_Click"  />
        <TextBlock x:Name="errorText" HorizontalAlignment="Left" Visibility="Collapsed" Foreground="Red" Margin="455,311,0,379" Text="Invalid Username or Password" TextWrapping="Wrap" Width="163"/>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Left" Height="23" Margin="455,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="455,290,0,0" VerticalAlignment="Top" Height="19" Width="163"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="362,235,0,0" VerticalAlignment="Top" Width="65"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="362,290,0,0" VerticalAlignment="Top" Width="65"/>


    </Grid>
</Page>
