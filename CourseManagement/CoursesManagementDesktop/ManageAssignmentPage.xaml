<Page x:Class="CoursesManagementDesktop.ManageAssignmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:t="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:CoursesManagementDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="AliceBlue"
      Title="ManageAssignmentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="629*"/>
            <ColumnDefinition Width="171*"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="assignmentNameBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="6.2,92,0,0" Grid.Column="1"/>
        <TextBox Name="pointsBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="6.2,143,0,0" Grid.Column="1"/>
        <ComboBox Name="typeCombo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="6.2,40,0,0" Grid.Column="1" Height="22" />
        <Label Content="Assignment Type" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5.2,14,0,0" Height="26" Width="100"/>
        <Label Content="Assignment name" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5.2,67,0,0" Height="26" Width="106"/>
        <Label Content="Possible Points" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5.2,120,0,0" Height="26" Width="88"/>
        <Label Content="Time Due" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="0.2,177,0,0" Height="26" Width="61"/>
        <t:TimePicker Margin="6.2,203,0,0" Grid.Column="1" Height="19" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>


    </Grid>
</Page>
